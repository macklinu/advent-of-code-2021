{
  "name": "advent-of-code-2021",
  "version": "0.0.0-not-published",
  "private": true,
  "description": "Solutions to Advent of Code 2021",
  "license": "MIT",
  "author": "mackie <macklinu@users.noreply.github.com>",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "prepare": "husky install",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "root": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "sort-package-json": "^1.53.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
